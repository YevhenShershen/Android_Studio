<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tlo1"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="54dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:background="@color/tlo2"
            android:text="Galeria"
            android:textColor="@color/text2"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:scaleType="centerCrop"
            android:src="@drawable/cat2"
            tools:srcCompat="@tools:sample/avatars"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:text="PREV"
                android:textColor="@color/text2" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:onClick="clickNext"
                android:text="NEXT"
                android:textColor="@color/text2"
                android:verticalScrollbarPosition="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/photo_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_photo_show"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/switch_fon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÅ‚o niebieskie?"
                android:textColor="@color/text1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="232dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_alignParentBottom="false"
                android:layerType="software"
                android:text="Author: Yevhen Shershen"
                android:textColor="@color/text1"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>